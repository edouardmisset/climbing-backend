{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --unstable-temporal --watch main.ts",
    "fmt": "deno lint && deno fmt"
  },
  "imports": {
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "hono/": "https://deno.land/x/hono@v4.0.2/"
  },
  "unstable": [
    "temporal"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ]
  }
}
