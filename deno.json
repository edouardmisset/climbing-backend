{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "tasks": {
    "dev": "deno lint --watch & deno fmt --watch & deno run --allow-net --allow-env --env --allow-read --allow-write --allow-ffi --unstable-ffi --watch src/dev.ts",
    "bench": "deno run --allow-net --allow-read --allow-env  --allow-run benchmark/mod.ts",
    "check": "deno check './**/*.ts*'",
    "import": "deno run --allow-net --allow-read --allow-write src/scripts/sync.ts && deno fmt",
    "test": "deno run --allow-net --allow-env src/test.ts ",
    "db:pull": "deno run -A npm:prisma@latest db pull",
    "db:push": "deno run -A npm:prisma@latest db push",
    "db:generate": "deno run -A --unstable npm:prisma@latest generate --no-engine",
    "db:seed": "deno run -A --env prisma/seed.ts"
  },
  "imports": {
    "@data/": "./src/data/",
    "@edouardmisset/utils": "jsr:@edouardmisset/utils@^2.0.9",
    "@helpers/": "./src/helpers/",
    "@routes/": "./src/routes/",
    "@schema/": "./src/schema/",
    "@std/csv": "jsr:@std/csv@^0.223.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.219.1",
    "@total-typescript/ts-reset": "npm:@total-typescript/ts-reset@^0.5.1",
    "fuzzysort": "npm:fuzzysort@^3.0.1",
    "hono": "npm:hono@^4.4.3",
    "text": "jsr:@std/text@^0.224.3",
    "zod": "npm:zod@^3.23.8",
    "zod-validator": "npm:@hono/zod-validator@^0.2.2"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ],
    "exclude": [
      "src/scripts/*",
      "src/helpers/remove-undefined-values.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ]
  }
}
