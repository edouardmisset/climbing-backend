{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "tasks": {
    "lint": "deno lint --watch",
    "fmt": "deno fmt --watch",
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch --watch-exclude='src/data/*.json' src/mod.ts",
    "bench": "deno run --allow-net --allow-read --allow-env --allow-run benchmark/mod.ts",
    "check": "deno check './**/*.ts*'",
    "backup": "deno run --allow-net --allow-read --allow-write src/scripts/backup.ts && deno fmt src/data",
    "test": "deno test --allow-net --allow-env --allow-read",
    "test:watch": "deno test --allow-net --allow-env --allow-read --watch"
  },
  "imports": {
    "@edouardmisset/utils": "jsr:@edouardmisset/utils@^3.3",
    "@std/csv": "jsr:@std/csv@^0.223.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@total-typescript/ts-reset": "npm:@total-typescript/ts-reset@^0.5.1",
    "data/": "./src/data/",
    "fuzzysort": "npm:fuzzysort@^3.0.1",
    "google-auth-library": "npm:google-auth-library@^9.14.2",
    "google-spreadsheet": "npm:google-spreadsheet@^4.1.4",
    "helpers/": "./src/helpers/",
    "hono": "npm:hono@^4.4.3",
    "routes/": "./src/routes/",
    "schema/": "./src/schema/",
    "scripts/": "./src/scripts/",
    "text": "jsr:@std/text@^1",
    "zod": "npm:zod@^3.23.8",
    "zod-validator": "npm:@hono/zod-validator@^0.2.2"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ],
    "exclude": [
      "src/scripts/*",
      "src/helpers/remove-undefined-values.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ]
  }
}
