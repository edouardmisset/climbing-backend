{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "tasks": {
    "dev": "deno lint --watch & deno fmt --watch & deno run --allow-net --allow-env --allow-read --watch server.ts",
    "lock": "deno cache --lock=lock.json --lock-write server.ts"
  },
  "imports": {
    "dotenv": "https://deno.land/std@0.210.0/dotenv/mod.ts",
    "hono": "https://deno.land/x/hono@v4.0.2/mod.ts",
    "hono/middleware": "https://deno.land/x/hono@v4.0.2/middleware.ts",
    "text": "https://deno.land/std@0.218.2/text/mod.ts",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "@utils/": "./src/utils/",
    "@schema/": "./src/schema/",
    "@data/": "./src/data/",
    "@routes/": "./src/routes/"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ]
  }
}
